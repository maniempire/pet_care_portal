<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date_of_visit %><br>
    <%= f.datetime_select :date_of_visit %>
  </div>
  <div class="field">
    <%= f.label :pet_id %><br>
	<%= f.select :pet_id, Pet.all.collect {|p| [ p.name, p.id ] }, :prompt => 'Select a Pet' %>
  </div>
  <div class="field">
    <%= f.label :customer_id %><br>
    <%= f.select :customer_id, Customer.all.collect {|c| [ c.name, c.id ] }, :prompt => 'Select a Customer' %>
  </div>
  <div class="field">
    Doctor<br>
    <%= f.select :practioner_id, Practioner.all.collect {|p| [ p.name, p.id ] }, :prompt => 'Select a Doctor' %>
  </div>
  <div class="field">
    <%= f.label :appointment_reminder %><br>
    <%= f.check_box :appointment_reminder %>
  </div>
  <div class="field">
    <%= f.label :reason_for_visit %><br>
    <%= f.text_area :reason_for_visit, :size=>"50X87" %>
  </div>
  <div class="actions">
	  <br>
    <%= f.submit %>
  </div>
  
<% end %>
