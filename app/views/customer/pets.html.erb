<h1>My Pets</h1>

          <div class="table-responsive">
            <table class="table table-striped">
  <thead>
    <tr>
	  <th>Name</th>
      <th>Type</th>
	  <th>Breed</th>
      <th>Age</th>
	  <th>Weight</th>
	  <th>Date of Last Visit</th>
      
    </tr>
  </thead>

  <tbody>
    <% @customer_pets.each do |pet| %>
      <tr>
		<td><%= pet.name %></td>
		<td><%= pet.pet_type %></td>
		 <td><%= pet.breed  %></td>
		 <td><%= pet.age  %></td>
		 <td><%= pet.weight %></td>
        <td><%= pet.date_of_last_visit %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br/>
<%= link_to 'My Pets', customer_pets_path %>